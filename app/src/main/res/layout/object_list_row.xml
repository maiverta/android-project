<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/postlistrow_image"
        android:layout_width="411dp"
        android:layout_height="213dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/example" />

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="108dp"
        android:layout_marginTop="209dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/postlistrow_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Samsung 50''"
            android:textColor="#000000"
            android:textColorHighlight="#040404"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postlistrow_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="2 Hand" />

        <TextView
            android:id="@+id/postlistrow_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Ashdod" />

        <TextView
            android:id="@+id/postlistrow_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price" />
    </LinearLayout>

    <Button
        android:id="@+id/postlistrow_editBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
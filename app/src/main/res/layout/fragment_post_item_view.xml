<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/white"
    tools:context=".PostItemViewFragment1">


    <ImageView
        android:id="@+id/post_view_image"
        android:layout_width="362dp"
        android:layout_height="193dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/example" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="380dp"
        android:layout_height="312dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_view_image">

        <TextView
            android:id="@+id/post_view_title"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Samsung 50''"
            android:textColor="#000000"
            android:textColorHighlight="#040404"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_view_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="City" />

        <TextView
            android:id="@+id/post_view_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="2 Hand" />

        <TextView
            android:id="@+id/object_item_view_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Description"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/post_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text=" ksdkdskddkld lclcdldddcll" />

        <TextView
            android:id="@+id/object_item_view_notes_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:text="Notes"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_view_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text=" note dslfmdlm ll lsdflfl mlsdmfdlsm
             dsfsfskf
             sfsfdlclcdldddcll" />

        <TextView
            android:id="@+id/post_view_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2dd"

        android:layout_width="384dp"
        android:layout_height="147dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call_phone_icon" />

        <TextView
            android:id="@+id/object_item_view_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Johana Martins"
            android:textColor="#000000"
            android:textColorHighlight="#040404"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_view_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="0522735536" />

        <TextView
            android:id="@+id/post_view_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>